<div id="sessions-new">
	<%= render partial: "devise/shared/sidebar" %>

	<div id="signin-container">
		<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
			<div class="form-text">
				<h2>Sign in</h2>
			</div>

			<div class="form-inputs">
				<%= f.input :email, required: false, autofocus: true, label: "Email Address", placeholder: "email@example.com" %>
    		<%= f.input :password, required: false, label: "Password", placeholder: "&bull;&bull;&bull;&bull;&bull;&bull;&bull;&bull;&bull;&bull;&bull;&bull;".html_safe %>
			</div>

			<div class="form-actions">
				<%= button_tag class: "button primary" do %>
					<span class="text">Log In</span>
					<%= inline_svg "next.svg" %>
				<% end %>
			</div>
		<% end %>
	</div>
</div>
