<div id="registrations-new">   
  <%= render partial: "devise/shared/sidebar" %>

  <div id="signup-container">     
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <div class="form-text">
      <h2>Create your free account</h2>       
      <h4>Claim your $1,000 cash bonus. No credit card required.</h4>
    </div>

    <div class="form-inputs">
      <%= f.input :email, required: true, autofocus: true, label: "Email Address", placeholder: "email@example.com" %>
      <%= f.input :phone, required: true, label: "Phone Number", placeholder: "(000) 000-0000" %>
      <%= f.input :first_name, required: true, label: "First Name", placeholder: "Elon" %>
      <%= f.input :last_name, required: true, label: "Last Name", placeholder: "Musk" %>
      <%= f.input :city, required: true, label: "City", placeholder: "San Francisco" %>
      <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), label: "Password", placeholder: "&bull;&bull;&bull;&bull;&bull;&bull;&bull;&bull;&bull;&bull;&bull;&bull;".html_safe %>
      <%= f.input :has_car, required: true, as: :radio_buttons, collection: [["I have a car", true], ["I need a car", false]], label: false %>
    </div>

    <div class="form-actions">
      <%= button_tag class: "button primary" do %>
        <span class="text">Create Your Account</span>
        <%= inline_svg "next.svg" %>
      <% end %>
    </div>
  <% end %>
</div>
